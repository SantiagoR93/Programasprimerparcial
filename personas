#include <stdio.h>

 

// Definición de la estructura persona
struct Persona {
    char nombre[50];
    int edad;
    float altura;
};

 

int main()
{
    //Creo una variable de tipo Persona llamada persona1
    struct Persona persona1[5];

    //Modificar los elementos de la estructura
    strcpy(persona1.nombre, "Pedro");
    persona1.edad=20;
    persona1.altura=1.70;

    //Imprimir los datos de las personas
    printf("Nombre: %s\n", persona1.nombre);
    printf("Edad: %d\n", persona1.edad);
    printf("Altura: %.2f\n", persona1.altura);

    return 0;

}

